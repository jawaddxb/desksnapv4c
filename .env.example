# DeckSnap Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# Application
APP_NAME="DeckSnap API"
APP_VERSION="0.1.0"
DEBUG=true
ENVIRONMENT=development

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# Database (PostgreSQL)
# For Docker: use postgres as host
# For local: use localhost:5433
DATABASE_URL=postgresql://decksnap:decksnap@localhost:5433/decksnap
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=false

# Redis
# For Docker: use redis as host
# For local: use localhost:6381
REDIS_URL=redis://localhost:6381/0
REDIS_MAX_CONNECTIONS=10

# Celery
CELERY_BROKER_URL=redis://localhost:6381/0
CELERY_RESULT_BACKEND=redis://localhost:6381/1
CELERY_TASK_TIME_LIMIT=3600
CELERY_TASK_SOFT_TIME_LIMIT=3300

# Security
SECRET_KEY=change-this-in-production-to-a-secure-random-key-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# S3 (Image Storage) - Optional
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=decksnap-images
AWS_REGION=us-east-1

# Cloudinary (Alternative image storage) - Optional
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100

# Logging
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
